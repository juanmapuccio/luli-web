---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  className?: string;
  loading?: "eager" | "lazy";
}

const { src, alt, className, loading = "lazy" } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  class={className}
  format="avif"
  quality="mid"
  loading={loading}
/>
