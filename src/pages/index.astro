---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import Gallery from "../components/Gallery";
import Footer from "../components/Footer";
import Hero from "../components/Hero.astro";
import Events from "../components/Events.astro";
import { getImagesFromFolder } from "../utils/cloudinary";
import { useTranslations } from "../i18n/utils";

const lang = "es";
const t = useTranslations(lang);

// Fetch gallery from Cloudinary
const cloudinaryImages = await getImagesFromFolder("luli-web/gallery");
const optimizedImageUrls = cloudinaryImages.map((img) => img.secure_url);
---

<Layout title="Lucia Puccio | FotografÃ­a" lang={lang}>
  <Navbar client:only="react" lang={lang} />

  <main class="min-h-screen bg-transparent">
    <Hero lang={lang} />

    <!-- Gallery Section -->
    <section
      id="gallery"
      class="pt-24 md:pt-[45rem] pb-24 md:pb-[30rem] bg-transparent"
    >
      <div class="text-center mb-24" id="gallery-title-container">
        <h2
          class="text-5xl md:text-7xl font-serif italic text-coastal-stone-deep tracking-tighter mb-6"
        >
          {t("gallery.title")}
        </h2>
        <p
          class="text-[10px] uppercase tracking-[0.6em] text-stone-400 font-sans"
        >
          {t("gallery.subtitle")}
        </p>
      </div>
      <Gallery client:only="react" images={optimizedImageUrls} />
      {
        optimizedImageUrls.length === 0 && (
          <p class="text-center text-stone-500">{t("gallery.empty")}</p>
        )
      }
    </section>

    <Events lang={lang} />
  </main>

  <Footer client:visible lang={lang} />
</Layout>
